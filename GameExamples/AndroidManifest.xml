<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
      package="com.stuffthathappens.games"
      android:versionCode="1"
      android:versionName="1.0.0">
    
    <uses-sdk android:minSdkVersion="3" />
	<uses-permission android:name="android.permission.VIBRATE"/>
	<uses-permission android:name="android.permission.WAKE_LOCK" />
    
    <application android:icon="@drawable/icon" android:label="@string/app_name">
        
	    <activity android:name=".Home"
	              android:label="@string/app_name"
	              android:screenOrientation="portrait" >
	        
	        <intent-filter>
	            <action android:name="android.intent.action.MAIN" />
	            <category android:name="android.intent.category.LAUNCHER" />
	        </intent-filter>
	        
	    </activity>      
        
    	<activity 
    		android:name=".accel.SensorListener" 
    		android:label="@string/accelerometer"
    		android:screenOrientation="portrait" />
    		
    	<activity 
    		android:name=".accel.SensorEventListener" 
    		android:label="@string/accelerometer"
    		android:screenOrientation="portrait" />
    
    	<activity
    		android:name="Sensors" 
    		android:label="@string/sensor_list"
    		android:screenOrientation="portrait"/>
    
    	<activity 
    		android:name="BouncingBallActivity"
    		android:screenOrientation="portrait" />
    
    	<activity
    		android:name="BubblesActivity"
    		android:screenOrientation="portrait" />
    
    
	</application>
</manifest>